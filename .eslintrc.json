{
  "root": true,
  "extends": ["warp/es6", "warp/node"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "overrides": [
    {
      "files": ["src/rules/**/*.js", "dangerfile.js"],
      "globals": {
        "danger": false,
        "warn": false,
        "fail": false,
        "message": false
      }
    },
    {
      "files": ["**/*.test.js", "**/test-utils.js"],
      "plugins": [
        "jest"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
